<% if user_signed_in? %>
  <% if current_user.profile_id == nil %>
    You don't yet have a profile
    <%= link_to "Create Profile", new_profile_path %><br>
    <% else %>
      <% if @profiles.any? %>

        <% @profiles.each do |profile| %>
        <%= image_tag profile.owner_image.url(:medium) %><br><br>
        <%= profile.owner_name %><br><br>
        <%= profile.owner_age %><br><br>
        <%= profile.gender %><br><br>
        <%= profile.sexual_preference %><br><br>
        <%= profile.owner_likes %><br><br>
        <%= profile.owner_dislikes %><br><br>
        <%= image_tag profile.pet_image.url(:medium) %><br><br>
        <%= profile.pet_name %><br><br>
        <%= profile.pet_age %><br><br>
        <%= profile.pet_species %><br><br>
        <%= profile.pet_likes %><br><br>
        <%= profile.pet_dislikes %><br><br>
        <% end %>

      <% end %>

  <% end %>
<% else %>
  Please sign up or sign in to use Pinder
<% end %>
